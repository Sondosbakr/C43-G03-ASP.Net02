<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    @* Start Header *@
    <Header>
        <Center>
            <nav class="mt-5">
                @* 1-Static Html *@
                <a href="/Home/Index" class="btn btn-primary m-2">Home</a>

                @* 2-Html Healper *@
                <a href="/Home/Privacy" class="btn btn-warning m-2">Privacy</a>
                @* @Html.ActionLink("Privacy", "Privacy", "Home", null, new {@class="btn btn-warning m-2" }); *@

                @* 3-Tag Healpers *@
                @* <a href="/Home/AboutUs" class="btn btn-success m-2">About Us</a> *@
                <a asp-Controller="Home" asp-Action="AboutUs" asp-route-id="10" class="btn btn-success m-2">About Us</a>

                <a href="/Home/ContactUs" class="btn btn-secondary m-2">ContactUs</a>
                <a href="/Auth/SignIn" class="btn btn-info m-2">SignIn</a>
                <a href="/Auth/Register" class="btn btn-danger m-2">Register</a>

            </nav>
        </Center>
    </Header>
    @* End Header *@

    <div>
        @RenderBody()
    </div>

    @* Start Footer *@
    <footer>
        <center>
            <div class="mt-2">
                <p>CopyRight &copy; Route @DateTime.Now.Year</p>
            </div>
        </center>
    </footer>
    @* End Footer *@
</body>
</html>
